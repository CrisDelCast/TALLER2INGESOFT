pipeline {
    agent any

    environment {
        REPORT_DIR = 'performance-reports'
        LOCUST_IMAGE = 'locustio/locust:latest'
        TARGET_HOST = 'http://api-gateway:8080'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Performance Test') {
            steps {
                sh 'chmod +x performance/run-performance-tests.sh'
                sh 'performance/run-performance-tests.sh'
            }
        }

        stage('Security Scan (OWASP ZAP)') {
            steps {
                sh '''
                    docker run --network host --rm \
                       -v $PWD:$PWD \
                       -w $PWD \
                       owasp/zap2docker-stable \
                       zap-baseline.py -t ${TARGET_HOST} -r ${REPORT_DIR}/zap_report.html || true
                '''
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: "${REPORT_DIR}/**/*", allowEmptyArchive: true
            publishHTML([
                allowMissing: true,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: REPORT_DIR,
                reportFiles: 'locust_report.html,zap_report.html',
                reportName: 'Performance & Security Reports'
            ])
            cleanWs()
        }
    }
} 